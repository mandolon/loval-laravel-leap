# =====================================================
# ENVIRONMENT VARIABLES EXAMPLE
# =====================================================
# Copy this to .env.local and add your actual values

# -----------------------------------------------------
# EXCALIDRAW FORK (LOCAL DEVELOPMENT ONLY)
# -----------------------------------------------------
# This project uses a custom Excalidraw fork locally.
# Fork location: ./excalidraw-fork 2/
#
# The fork is NOT in git. To use it:
#   cd "excalidraw-fork 2" && yarn install && yarn build:packages
#
# Lovable/CI will automatically use npm packages instead.

# -----------------------------------------------------
# STORAGE & API
# -----------------------------------------------------
# Storage mode (switch to false when ready for backend)
VITE_USE_LOCAL_STORAGE=true

# API configuration (for when you switch to Laravel/Supabase)
VITE_API_BASE_URL=http://127.0.0.1:8000/api
VITE_API_VERSION=v1

# Debug mode (logs API operations to console)
VITE_DEBUG_API=false

# Authentication mode
VITE_AUTH_MODE=supabase
